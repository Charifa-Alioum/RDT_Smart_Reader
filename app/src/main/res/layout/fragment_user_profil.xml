<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.main.user_profil.UserProfilFragment">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_user_info"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"
            app:cardCornerRadius="32dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Krawist Ngoben"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintBottom_toTopOf="@id/user_details"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/user_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="690142761 / arthurngoben@gmail.com"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/user_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:padding="@dimen/semi_fab_margin">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/button_edit_user_info"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardElevation="0dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_round_person_24"
                                android:background="@drawable/button_round_background"
                                android:padding="@dimen/semi_fab_margin"
                                android:tint="#2196F3"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                android:text="Modifier"
                                android:textColor="#2196F3"
                                android:textSize="@dimen/user_profil_text_icon_explaniation_size"
                                android:singleLine="true"
                                android:gravity="center"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/button_edit_settings"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardElevation="0dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_round_settings_24"
                                android:background="@drawable/button_round_background"
                                android:padding="@dimen/semi_fab_margin"
                                android:tint="#4CAF50"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                android:text="Parametres"
                                android:textColor="#4CAF50"
                                android:textSize="@dimen/user_profil_text_icon_explaniation_size"
                                android:singleLine="true"
                                android:gravity="center"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/button_create_form"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardElevation="0dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_round_assignment_24"
                                android:background="@drawable/button_round_background"
                                android:padding="@dimen/semi_fab_margin"
                                android:tint="#FF5722"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                android:text="Créer un form"
                                android:textSize="@dimen/user_profil_text_icon_explaniation_size"
                                android:textColor="#FF5722"
                                android:singleLine="true"
                                android:gravity="center"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/button_deconnection"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardElevation="0dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_round_power_settings_new_24"
                                android:background="@drawable/button_round_background"
                                android:padding="@dimen/semi_fab_margin"
                                android:tint="#E91E63"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                android:text="Se déconnecter"
                                android:textColor="#E91E63"
                                android:textSize="@dimen/user_profil_text_icon_explaniation_size"
                                android:singleLine="true"
                                android:gravity="center"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/card_user_info"
            app:layout_constraintTop_toTopOf="@id/card_user_info"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/imageview_user_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profil"
                android:scaleType="centerCrop"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_background"
                android:backgroundTint="#000"
                android:alpha=".2"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_round_photo_camera_24"
                android:tint="@android:color/white"
                android:background="@drawable/button_round_background"
                android:padding="@dimen/semi_fab_margin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/layout_forms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/card_user_info">

            <TextView
                android:id="@+id/text_formulaires"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mes formulaires"
                android:layout_marginTop="@dimen/fab_margin"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:alpha=".7"
                android:layout_marginStart="@dimen/fab_margin"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text_formulaires"
                app:cardCornerRadius="32dp"
                android:layout_marginTop="@dimen/semi_fab_margin">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_forms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_form"
                    tools:itemCount="3"
                    android:paddingTop="@dimen/semi_fab_margin"
                    android:paddingStart="@dimen/semi_fab_margin"
                    android:paddingEnd="@dimen/semi_fab_margin"/>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>