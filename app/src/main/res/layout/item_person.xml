<?xml version="1.0" encoding="utf-8"?>
<layout>

    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginTop="@dimen/quater_fab_margin"
        android:layout_marginBottom="@dimen/quater_fab_margin">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/semi_fab_margin">

            <TextView
                android:id="@+id/nom_personne"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Alin Tuchel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/statut_maladie"
                app:layout_constraintTop_toTopOf="parent"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/details_personne"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/statut_maladie"
                android:text="24 ans - Mballa 2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nom_personne"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:alpha=".6"/>

            <TextView
                android:id="@+id/synched_state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/statut_maladie"
                android:text="Non Synchronisé"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/details_personne"
                android:textColor="#f00"
                android:visibility="visible"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"/>

            <TextView
                android:id="@+id/statut_maladie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Négatif"
                android:textColor="#00897B"
                app:layout_constraintTop_toTopOf="@id/nom_personne"
                app:layout_constraintBottom_toBottomOf="@id/synched_state"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textStyle="bold"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>