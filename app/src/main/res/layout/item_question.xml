<?xml version="1.0" encoding="utf-8"?>
<layout>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="@dimen/semi_fab_margin"
        app:cardCornerRadius="@dimen/fab_margin"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/fab_margin"
                android:animateLayoutChanges="true"
                android:background="@color/color_accent"
                android:layout_marginBottom="@dimen/fab_margin">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/question_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_gravity="center_vertical"
                    android:selectAllOnFocus="true"
                    android:padding="@dimen/quater_fab_margin"
                    android:imeOptions="actionDone"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textColor="@android:color/white"
                    android:text="Question"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:background="@android:color/transparent"/>


                <ImageButton
                    android:id="@+id/button_delete_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_round_delete_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/button_round_background"
                    android:padding="@dimen/semi_fab_margin"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nom du champ pour la sauvegarde"
                android:layout_marginStart="@dimen/semi_fab_margin"
                android:layout_marginEnd="@dimen/semi_fab_margin"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edittext_saved_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_required_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/required"
                android:textColor="#E91E63"
                android:hint="@string/hint_required_question"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/semi_fab_margin"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:hint="Type de reponse">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/edittext_type_question"
                    android:layout_width="match_parent"
                    android:padding="@dimen/fab_margin"
                    android:enabled="false"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Texte d'indication"
                android:layout_marginStart="@dimen/semi_fab_margin"
                android:layout_marginEnd="@dimen/semi_fab_margin"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edittext_hint_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/semi_fab_margin">

                <LinearLayout
                    android:id="@+id/layout_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/semi_fab_margin">

                    <LinearLayout
                        android:id="@+id/layout_options_values"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_add_option"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/semi_fab_margin"
                        android:text="Ajouter une option"
                        style="@style/Widget.MaterialComponents.Button.TextButton"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_date_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginEnd="@dimen/semi_fab_margin"
                        android:gravity="center_vertical">

                        <ImageButton
                            android:id="@+id/button_date_min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_round_calendar_today_24"
                            android:background="@drawable/button_round_background"
                            android:padding="@dimen/semi_fab_margin"
                            android:tint="@color/color_accent"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Date Min"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editext_date_min"
                                android:enabled="false"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageButton
                            android:id="@+id/button_date_max"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_round_calendar_today_24"
                            android:background="@drawable/button_round_background"
                            android:padding="@dimen/semi_fab_margin"
                            android:tint="@color/color_accent"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Date limite"
                            android:layout_marginStart="@dimen/semi_fab_margin"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edittext_date_max"
                                android:enabled="false"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

